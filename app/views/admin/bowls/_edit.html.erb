<td colspan="<%= @colspan %>">
  <% if item.id %>
    <% divid = "edit#{item.id}" %>
    <% form_url = admin_bowl_path(item) %>
    <% form_options = { :method=>:put, :remote=>true } %>
    <% submit_str = "Update" %>
  <% else %>
    <% divid="new_item" %>
    <% form_url = admin_bowls_path %>
    <% form_options = { :method=>:post, :remote=>true } %>
    <% submit_str = "Create" %>
  <% end %>
  <div id="<%= divid %>">
    <%= form_tag form_url, form_options do %>
      <table class="editbox">
        <tr>
          <td>
            <% if item.id %>
              <%= link_to "Cancel", admin_bowl_path(item), :remote=>true %>
            <% end %>
          </td>
          <td class="label">Name</td>
          <td class="left"><%= text_field "item", "name" %></td>
        </tr>
        <tr>
          <td></td>
          <td class="label">Location</td>
          <td class="left"><%= text_field "item", "location" %></td>
        </tr>
        <tr>
          <td></td>
          <td class="label">URL</td>
          <td class="left"><%= text_field "item", "url" %></td>
        </tr>
        <tr>
          <td></td>
          <td class="label">Multiplier</td>
          <td class="left"><%= text_field "item", "multiplier",:size=>3 %></td>
        </tr>
        <tr>
          <td>
            <%= submit_tag submit_str %>
          </td>
          <td class="label">Game</td>
          <td class="left"><%= select "item","game_id", games %></td>
        </tr>
        <tr></tr>
      </table>
    <% end %>
  </div>
</td>
